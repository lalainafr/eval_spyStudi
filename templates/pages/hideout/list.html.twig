{% extends 'base.html.twig' %}

{% block title %}- Liste des PLANQUES  
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class='title text-center'>LISTE DES PLANQUES</h1>
		<br>
		{# Message flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
		<br>		
		<a href="{{path('app_hideout_new')}}">Ajouter</a>
		<section>

			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Code
						</th>
						<th scope="col">Adresse
						</th>
						<th scope="col">Type
						</th>
						<th scope="col">Pays
						</th>
						<th scope="col">Action
						</th>
					</tr>
				</thead>
				<tbody>
					{% for hideout in hideouts %}
						<tr>
							<td>{{hideout.id}}</td>
							<td>{{hideout.code}}</td>
							<td>{{hideout.address}}</td>
							<td>{{hideout.type}}</td>
							<td>{{hideout.country}}</td>
							<td>
								<a href="{{path('app_hideout_edit', {id: hideout.id})}}">edit</a>
								&nbsp
								<a href="{{path('app_hideout_delete', {id: hideout.id})}}">delete</a>
							</td>
						</tr>
					</tbody>
				{% endfor %}

			</tbody>
		</table>
	</section>
</div>{% endblock %}
