{% extends 'base.html.twig' %}

{% block title %}- Liste des types  MISSIONS
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class='title text-center'>LISTE DES TYPES DE MISSIONS</h1>
		<br>
		<br>		
		<a href="{{path('app_type_new')}}">Ajouter</a>
		<section>

			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nom du type de mission
						</th>
						<th scope="col">Action
						</th>
					</tr>
				</thead>
				<tbody>
					{% for type in types %}
						<tr>
							<td>{{type.id}}</td>
							<td>{{type.name}}</td>
							<td>
								<a href="{{path('app_type_edit', {id: type.id})}}">edit</a>
								&nbsp
								<a href="{{path('app_type_delete', {id: type.id})}}">delete</a>
							</td>
						</tr>
					</tbody>
				{% endfor %}

			</tbody>
		</table>
	</section>
</div>{% endblock %}
