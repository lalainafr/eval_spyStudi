{% extends 'base.html.twig' %}

{% block title %}- Liste des status  MISSIONS
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class='title text-center'>LISTE DES STATUS DE MISSIONS</h1>
		<br>
		{# Message flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
		<br>
		<a href="{{path('app_status_new')}}">Ajouter</a>
		<section>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nom du status de mission
						</th>
						<th scope="col">Action
						</th>
					</tr>
				</thead>
				<tbody>
					{% for status in statuses %}
						<tr>
							<td>{{status.id}}</td>
							<td>{{status.name}}</td>
							<td>
								<a href="{{path('app_status_edit', {id: status.id})}}">edit</a>
								&nbsp
								<a href="{{path('app_status_delete', {id: status.id})}}">delete</a>
							</td>
						</tr>
					</tbody>
				{% endfor %}

			</tbody>
		</table>
	</section>
</div>{% endblock %}
