{% extends 'base.html.twig' %}

{% block title %} - Liste des SPECIALITES
{% endblock %}

{% block body %}
	<div class="container">
    <h1 class='text-center'>LISTE DES SPECIALITES</h1>
    <br>
    <br>
		<section>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Nom </th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
						{% for speciality in specialities %}
					<tr>
							<td>{{speciality.id}}</td>
							<td>{{speciality.name}}</td>
							<td>
								<a href="{{path('app_speciality_edit', {id: speciality.id})}}">edit</a>
								&nbsp
								<a href="{{path('app_speciality_delete', {id: speciality.id})}}">delete</a>
							</td>
					</tr>
						{% endfor %}

				</tbody>
			</table>

		</section>
	</div>
{% endblock %}
