{% extends 'base.html.twig' %}

{% block title %}- Modifier MISSION
{% endblock %}

{% block body %}
	<div class="container">
		<section>
			<h1 class='title text-center'>MODIFIER UNE MISSION</h1>
			<br>
			<br>
			{{ form_start(form) }}
			<div class="row justify-content-center">
				<br>
				<div class="col-md-4">
					{{ form_row(form.title) }}
					{{ form_row(form.description) }}
					{{ form_row(form.codeName) }}
					{{ form_row(form.agent) }}
					{{ form_row(form.type) }}
				</div>
				<div class="col-md-4">
					{{ form_row(form.status) }}
					{{ form_row(form.country) }}
					{{ form_row(form.speciality) }}
					{{ form_row(form.hideout) }}
				</div>
				<div class="col-md-4">
					{{ form_row(form.target) }}
					{{ form_row(form.contact) }}
					{{ form_row(form.startDate) }}
					{{ form_row(form.endDate) }}
					<br>
					{{ form_row(form.submit) }}
				</div>

			</div>
			{{ form_end(form) }}
		</section>
	</div>
{% endblock %}
